# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Database Connection Strings
USER_DB_URL=jdbc:postgresql://aws-0-us-west-1.pooler.supabase.com:6543/postgres?currentSchema=user_service
TICKETING_DB_URL=jdbc:postgresql://aws-0-us-west-1.pooler.supabase.com:6543/postgres?currentSchema=ticketing_service
PAYMENT_DB_URL=jdbc:postgresql://aws-0-us-west-1.pooler.supabase.com:6543/postgres?currentSchema=payment_service
SUBSCRIPTION_DB_URL=jdbc:postgresql://aws-0-us-west-1.pooler.supabase.com:6543/postgres?currentSchema=subscription_service
SCHEDULING_DB_URL=jdbc:postgresql://aws-0-us-west-1.pooler.supabase.com:6543/postgres?currentSchema=scheduling_service

DB_USERNAME=postgres.your-project-ref
DB_PASSWORD=your-database-password

# MongoDB (Local or Atlas)
MONGODB_URI=mongodb://mongo:mongo123@localhost:27017/
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/dbname

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Stripe (for Payment Service)
STRIPE_API_KEY=sk_test_your_key_here

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=900000

# Environment
ENVIRONMENT=development